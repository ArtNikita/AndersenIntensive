        <item name="android:layout_margin">@dimen/normal_space</item>
    </style>

    <style name="CalcButton">
        <item name="android:layout_width">@dimen/counter_button_size</item>
        <item name="android:layout_height">@dimen/counter_button_size</item>
        <item name="android:layout_margin">@dimen/normal_space</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">40sp</item>
